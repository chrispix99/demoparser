<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:padding="@dimen/row_padding"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:clickable="true"
              android:focusable="true"
              android:background="?android:attr/selectableItemBackground"
              android:theme="@style/TextRow">

    <ImageView
        android:id="@+id/task_icon"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        tools:src="@mipmap/ic_launcher"
        android:contentDescription="@string/task_icon_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/task_name"
            android:layout_marginLeft="@dimen/row_padding"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_height="wrap_content"
            tools:text="example text example text example text example text example text example text example text vexample text example textexample text v"
            />
        <TextView
            android:id="@+id/task_earnings"
            android:layout_marginLeft="@dimen/row_padding"
            android:gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$1.00"/>
    </LinearLayout>
</LinearLayout>